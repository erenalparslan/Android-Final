<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcd4"
    tools:context=".Login">

    <EditText
        android:id="@+id/loginIsim"
        android:layout_width="374dp"
        android:layout_height="71dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:hint="İsminizi Giriniz"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="#FF676262"
        app:layout_constraintBottom_toTopOf="@+id/loginSifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/loginSifre"
        android:layout_width="368dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Şifrenizi Giriniz"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#676262"
        app:layout_constraintBottom_toTopOf="@+id/beniHatirla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginIsim" />

    <Switch
        android:id="@+id/beniHatirla"
        android:layout_width="182dp"
        android:layout_height="43dp"
        android:layout_marginBottom="31dp"
        android:text="Beni Hatırla"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:thumbTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginSifre" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beniHatirla" />


</androidx.constraintlayout.widget.ConstraintLayout>