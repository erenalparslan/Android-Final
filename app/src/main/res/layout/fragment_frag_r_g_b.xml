<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcd4"
    tools:context=".FragRGB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Red"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="#D90000"/>

        <SeekBar
            android:id="@+id/seekBarRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@android:drawable/ic_media_play"
            android:progressTint="@color/white"
            android:progressTintMode="multiply"
            android:thumb="@android:drawable/btn_default_small"
            android:thumbTint="#CB0B0D"
            android:progress="0"
            android:max="255"
            android:thumbTintMode="src_over" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Green"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="#4CAF50"/>

        <SeekBar
            android:id="@+id/seekBarGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@android:drawable/ic_media_play"
            android:progressTint="@color/white"
            android:progressTintMode="multiply"
            android:thumb="@android:drawable/btn_default_small"
            android:thumbTint="#4CAF50"
            android:progress="188"
            android:max="255"
            android:thumbTintMode="src_over" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Blue"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="#2196F3"/>

        <SeekBar
            android:id="@+id/seekBarBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@android:drawable/ic_media_play"
            android:progressTint="@color/white"
            android:progressTintMode="multiply"
            android:thumb="@android:drawable/btn_default_small"
            android:thumbTint="#2196F3"
            android:progress="212"
            android:max="255"
            android:thumbTintMode="src_over" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#00BCD4"
            android:textAlignment="center"
            android:textSize="38dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
</FrameLayout>


